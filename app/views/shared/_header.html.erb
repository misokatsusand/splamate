<header>
  <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
    <div class="container-fluid">
      <%= link_to "/", class: "navbar-brand" do %>
        <img class="header_logo" src="/logo.png" alt="イカタイ">
      <% end %>
      <div class="user_icon_or_login">
        <% if logged_in? %>
          <%= link_to user_path(@current_user.id), title: "@#{@current_user.nickname}" do %>
            <img class="rounded-circle header_icon" src="<%= @current_user.image %>">
          <% end %>
        <% else %>
          <%= link_to "ログイン", "/auth/twitter", method: :post, class: "btn btn-primary me-2" %>
        <% end %>
      </div>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "利用規約", "/terms", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "ルール＆マナー", "/rule", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "ルーム一覧", "/rooms/index", class: "btn header_btn nav-link me-2" %>
          </li>
          <li class="nav-item">
            <%= link_to "ルーム作成", "/rooms/new", class: "btn header_btn nav-link" %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
