<div class="user_index_container">
  <h3>ユーザー管理画面</h3>
  <%= form_with url: "/users" do |f| %>
    <%= f.text_field :name, placeholder: "name", class: "form-control search_box" %>
    <%= f.text_field :id, placeholder: "id", class: "form-control search_box" %>
    <%= f.submit "検索", class: "btn btn-primary" %>
  <% end %>
  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th>icon</th>
          <th>uid</th>
          <th>name</th>
          <th>nickname</th>
          <th>編集</th>
          <th>削除</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag(user.image) %></td>
            <td><%= user.uid %></td>
            <td><%= user.name %></td>
            <td>@<%= user.nickname %></td>
            <td><%= link_to "編集", edit_user_path(user.id) %></td>
            <td><%= link_to "削除", user , method: :delete, data: {confirm: "削除しますか?"} %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
